<div class="row">
  <h1>Submit a Project</h1>
  <form class="col s12">


    <div class="input-field">
      <select class="icons">
        <option value="" disabled selected>Choose your name</option>
        {{#each students}}
        <option value="{{id}}" data-icon="{{imageUrl}}" class="circle">{{username}}</option>
        {{/each}}
      </select>
      <label>Student Name</label>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <input id="project-name" type="text" class="validate">
        <label for="project-name">Project Name</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <textarea id="project-description" class="materialize-textarea"></textarea>
        <label for="project-description">Project Description</label>
     </div>
    </div>

    <div class="row">
      <div class="input-field col s12 m6">
        <input id="deployed-url" type="url" class="validate">
        <label for="deployed-url">Deployed URL</label>
      </div>
      <div class="input-field col s12 m6">
        <input id="github-url" type="url" class="validate">
        <label for="image-url">Github URL</label>
      </div>
    </div>
    <div class="row">
      <div class="col s12 m6">
        <button id="submit-project" class="btn waves-effect waves-light" type="submit" name="action">Submit
          <i class="material-icons right">send</i>
        </button>
      </div>
    </div>
  </form>
</div>

<script src="/javascripts/submit.js" charset="utf-8"></script>
